<%= render 'shared/errors', obj: @chef %>

<div class="row container">
  <div class="col-md-12 fix-name3 fix-name2 fix-name4">
    <%= form_for(@chef, :html => {class: "form-horizontal", role: "form"}) do |f| %>
      <div class="form-group">
        <div class="control-label col-md-2 col-md-offset-1">
          <%= f.label :chefname, "Choose Chefname" %>
        </div>
        <div class="col-md-8">
          <%= f.text_field :chefname, class: "form-control", placeholder: "Enter Your Name", autofocus: true %>
        </div>
      </div>
      <div class="form-group">
        <div class="control-label col-md-2 col-md-offset-1">
          <%= f.label :email %>
        </div>
        <div class="col-md-8">
          <%= f.email_field :email, rows: 10, class: "form-control", placeholder: "Enter Your Email" %>
        </div>
      </div>
      <div class="form-group">
        <div class="control-label col-md-2 col-md-offset-1">
          <%= f.label :password %>
        </div>
        <div class="col-md-8">
          <%= f.password_field :password, rows: 10, class: "form-control", placeholder: "Choose a Password" %>
        </div>
      </div>
      <div class="form-group">
        <div class="control-label col-md-2 col-md-offset-1">
          <%= f.label :password_confirmation, "Confirm Password" %>
        </div>
        <div class="col-md-8">
          <%= f.password_field :password_confirmation, rows: 10, class: "form-control", placeholder: "Confirm Password" %>
        </div>
      </div>
      <br>
      <div class="form-group fix-name4">
        <div class="col-md-offset-3 add-margin-bottom add-margin-left">
          <%= f.submit(@chef.new_record? ? "Create my account" : "Update my account",
                                                                class: "btn btn-primary") %>
        </div>
      </div>
    <% end %>
    <div class="col-md-offset-5">
      [ <%= link_to "Cancel request and return to recipes listing", recipes_path %> ]
    </div>
  </div>
</div>
