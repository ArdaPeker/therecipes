<div class="row">
  <div class="col-md-2 fix-avatar">
    <section class="chef-info">
      <%= link_to gravatar_for(comment.chef, size: 80), chef_path(comment.chef) %>
    </section>
  </div>
  <div class="col-md-8 well">
    <p><%= comment.description %></p>
    <p>
      <span class="quiet"><small>Created:
        <%= time_ago_in_words(comment.created_at) %> ago by
           <%= comment.chef.chefname.capitalize %></small>
      </span>
    </p>
  </div>
</div>
